@model Aiursoft.Warp.Models.ApiKeyViewModels.IndexViewModel

<h1 class="h3 mb-3">@Localizer["My API Keys"]</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">@Localizer["Manage your API keys"]</h5>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="align-middle me-1" data-lucide="plus"></i>
                        @Localizer["Create New Key"]
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>@Localizer["Name"]</th>
                            <th>@Localizer["API Key"]</th>
                            <th>@Localizer["Created"]</th>
                            <th>@Localizer["Expires"]</th>
                            <th>@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var key in Model.ApiKeys)
                        {
                            <tr>
                                <td>@(key.Name ?? "Unnamed")</td>
                                <td>
                                    <code>@key.ApiKey</code>
                                </td>
                                <td>@key.CreationTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (key.ExpireAt.HasValue)
                                    {
                                        <span class="@(key.ExpireAt < DateTime.UtcNow ? "text-danger" : "")">
                                            @key.ExpireAt.Value.ToString("yyyy-MM-dd HH:mm")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@Localizer["Never"]</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@key.Id" method="post" onsubmit="return confirm('@Localizer["Are you sure you want to delete this API key?"]');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="align-middle" data-lucide="trash-2"></i>
                                            @Localizer["Delete"]
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                        @if (!Model.ApiKeys.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <p class="text-muted mb-0">@Localizer["You don't have any API keys yet."]</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
