@model Aiursoft.Warp.Models.HomeViewModels.EnterPasswordViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5">
            <div class="card-header">
                <h3 class="card-title">@Localizer["Password Required"]</h3>
            </div>
            <div class="card-body">
                <p>@Localizer["This link is protected by a password. Please enter the password to continue."]</p>
                <form asp-action="Unlock" asp-route-code="@Model.Code" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Code" />
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">@Localizer["Unlock"]</button>
                </form>
            </div>
        </div>
    </div>
</div>
