@model Aiursoft.Warp.Models.AdminViewModels.DeleteLinkViewModel
@inject IViewLocalizer Localizer

<h1>@Localizer["Delete Link"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localizer["ShorterLink"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["Short Link"]
        </dt>
        <dd class = "col-sm-10">
            /@Html.DisplayFor(model => model.Link.RedirectTo)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Original URL"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Link.TargetUrl)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Owner"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Link.User.DisplayName)
        </dd>
    </dl>

    <form asp-action="DeleteLink">
        <input type="hidden" asp-for="@Model.Link.Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
        <a asp-action="AllLinks" class="btn btn-secondary ms-2">@Localizer["Back to List"]</a>
    </form>
</div>
