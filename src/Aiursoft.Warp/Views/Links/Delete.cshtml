@model Aiursoft.Warp.Models.LinksViewModels.DeleteViewModel


@{
    ViewData["Title"] = Localizer["Delete Link"];
}

<h1>@ViewData["Title"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localizer["ShorterLink"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["Short Link"]
        </dt>
        <dd class = "col-sm-10">
            /@Html.DisplayFor(model => model.RedirectTo)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Original URL"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TargetUrl)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </form>
</div>
