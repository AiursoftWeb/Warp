@model Aiursoft.Warp.Models.LinksViewModels.EditViewModel

<h1>@Localizer["Edit Link"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TargetUrl" class="control-label"></label>
                <input asp-for="TargetUrl" class="form-control" />
                <span asp-validation-for="TargetUrl" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">@Localizer["Back to List"]</a>
            </div>
        </form>
    </div>
</div>
